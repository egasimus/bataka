* 
  box-sizing border-box
  position   relative

body
  background #fafafa
  color #222
  margin 0

body, input, textarea, button, table, select
  font-family Open Sans
  font-size 14px
  line-height 24px

textarea
  background none
  border 1px dotted #aaa
  padding 0 6px
  &:focus
    outline none

a
  color inherit

button
  background #ccc
  font-weight bold
  border none

.status
  position fixed
  top 0
  bottom 0
  right 0
  width 240px
  padding 6px
  z-index 1
  background #ddd
  &Item
    font-size 0.87em
  input[type=text], input[type=password]
    border 1px solid #aaa
    padding 0 3px
    width 100%
  input[type=password]
    border-top none
    font-size 0.7em

.content
  padding-right 240px

.replyForm, .submitForm
  clear both
  padding 6px
  textarea, button
    height 36px
    vertical-align top

.mediaUploader
  max-width 200px
  font-size 0.7em
  display inline-block
  cursor pointer
  border-right none
  text-transform uppercase
  input[type=file]
    display none
  img
    max-width 100%
    max-height 100%
  &Add
    line-height 36px
    border 1px dotted #aaa
    margin-right -1px
    margin-bottom -1px
    line-height 34px
    padding 0 5px 0 6px
  &Progress, &Cancel
    position absolute
    z-index 1
    padding 3px 6px
    border-radius 1px
    font-weight bold
    color #fff
  &Progress
    background #2c3
  &Cancel
    background #c32
    top 6px
    right 6px
    display none
  &:hover &Cancel
    display block

.thread
  padding 0 12px
  border-top 1px solid #ccc
  clear both

.post
  clear both
  margin 12px 0
  //padding-left 12px

  //&:first-of-type
    //padding-left 0

  &:after
    display table
    content ''
    clear both

  &UserPic
    margin-right 3px
    vertical-align top
    float left

  &UserName, &Info, &Date, &TripCode
    display inline-block
    vertical-align baseline

  &UserName
    font-weight bold
    padding-right 12px

  &Info
    color #ccc
    font-size 0.7em

  &Date
    padding-left 12px
    text-decoration none
    &:hover
      text-decoration underline

  &:hover &Info
    color #888

  &Text
    white-space pre-line

  &Media
    float left
    max-width 300px
    margin-right 6px
    z-index 1
    &Image
      max-width 100%
      max-height 100%
