* 
  box-sizing border-box
  position   relative

body
  background #fafafa
  color #222
  margin 0

body, input, textarea, button, table, select
  font-family Open Sans
  font-size 14px
  line-height 1.7142857

textarea
  padding 0 6px

button
  background #ccc
  font-weight bold
  border none

.replyForm, .submitForm
  padding 6px
  textarea, button
    height 36px
    vertical-align top
  .mediaUploader
    max-width 200px
    max-height 200px
    line-height 36px
    font-size 0.7em
    display inline-block
    cursor pointer
    border-right none
    text-transform uppercase
    input[type=file]
      display none
    img
      max-width 100%
      max-height 100%
    &Add
      border 1px dotted #aaa
      border-right none
      line-height 34px
      padding 0 5px 0 6px

.thread
  padding 6px
  border-top 1px solid #ccc

.post
  padding-left 12px

  &:first-of-type
    padding-left 0

  &UserPic
    margin-right 3px
    vertical-align top
    float left

  &UserName
    font-weight bold
    margin-right 3px
    vertical-align top

  &Date
    color #777
    text-decoration none
    font-size 0.87em
    &:hover
      text-decoration underline

  &Text
    white-space pre-line

.status
  position fixed
  top 0
  bottom 0
  right 0
  width 240px
  padding 3px 6px
  z-index 1
  background #ddd

  &Item
    font-size 0.87em
