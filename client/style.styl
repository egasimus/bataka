* 
  box-sizing border-box
  position   relative

body
  background #fafafa
  color #222
  margin 0

body, input, textarea, button, table, select
  font-family "PT Sans", sans-serif
  font-size 14px
  line-height 18px

textarea
  background none
  border 1px dotted #aaa
  padding 0 6px
  &:focus
    outline none

a
  color inherit

button
  background #ccc
  font-weight bold
  border none

.status
  position fixed
  top 0
  bottom 0
  right 0
  width 240px
  z-index 1
  background #ddd
  padding 6px 0
  input[type=text], input[type=password]
    border 1px solid #aaa
    padding 0 3px
    display block
    margin 6px auto
  input[type=password]
    border-top none
    font-size 0.7em
  &Item, &Thread
    font-size 0.87em
    line-height 18px
  &Item
    padding 4px 0
    text-align center
    text-transform uppercase
    color #777
  &Threads
    margin-top 6px
  &Thread
    padding 4px 6px
    white-space nowrap
    overflow hidden
    cursor pointer
    &:hover
      background white
    &User, &Text
      display inline-block
    &User
      font-weight bold
      margin-right 3px

.content
  padding-right 240px

.replyForm, .submitForm
  clear both
  margin 12px 0
  textarea, button
    height 36px
    vertical-align top

.submitForm
  margin 12px

.mediaUploader
  max-width 200px
  font-size 0.7em
  display inline-block
  cursor pointer
  border-right none
  text-transform uppercase
  input[type=file]
    display none
  img
    max-width 100%
    max-height 100%
  &Add
    line-height 36px
    border 1px dotted #aaa
    margin-right -1px
    margin-bottom -1px
    line-height 34px
    padding 0 5px 0 6px
  &Progress, &Cancel
    position absolute
    z-index 1
    padding 3px 6px
    border-radius 1px
    font-weight bold
    color #fff
  &Progress
    background #2c3
  &Cancel
    background #c32
    top 6px
    right 6px
    display none
  &:hover &Cancel
    display block

.thread
  padding 0 12px
  border-top 1px solid #ccc
  clear both

.post
  clear both
  margin 12px 0
  &:after
    display table
    content ''
    clear both
  &UserPic
    margin-right 3px
    vertical-align top
    float left
  &UserName, &Info, &Date, &TripCode
    display inline-block
    vertical-align baseline
  &UserName
    font-weight bold
    padding-right 12px
  &Info
    color #ccc
    font-size 0.7em
  &:hover &Info
    color #888
  &Date
    padding-left 12px
    text-decoration none
    &:hover
      text-decoration underline
  &Text
    white-space pre-line
  &Media
    float left
    max-width 300px
    margin-right 6px
    z-index 1
    &Image
      max-width 100%
      max-height 100%
